{
  "name": "mini-crud",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "build": "rimraf dist/ && tsc --noEmitOnError --pretty  --extendedDiagnostics && npm run copy:templates",
    "copy:templates": "mkdir -p dist/services/Mail/templates && cp -r src/services/templates/*.ejs dist/services/Mail/templates/",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "start": "node -r module-alias/register dist/index.js",
    "test": "echo \"test run\"",
    "test:docs": "swagger-cli validate src/docs/openapi.yaml",
    "test:watch": "test --watch",
    "test:coverage": "test --coverage",
    "validate": "npm run lint && npm run type-check && npm test",
    "prisma:generate": "npx prisma generate",
    "prisma:format": "npx prisma format",
    "generate:openapi": "npx swagger-jsdoc -d ./docs/openapi.config.js -o ./docs/openapi.yaml",
    "postinstall": "npm run generate:openapi && npm run prisma:generate",
    "lint": "npm run lint:check -- --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=10",
    "lint:ci": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "lint:md": "markdownlint-cli2 --fix '**/*.md'",
    "lint:md:check": "markdownlint-cli2 **/*.md",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,mjs,json,md,mdx,yml,yaml}\"",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "ci": "echo 'CI=true'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md,yml,yaml}": [
      "npm run type-check",
      "npm run format",
      "npm run lint"
    ],
    "!commitlint.config.js": [],
    "*.{md,mdx}": [
      "npm run lind:md"
    ]
  },
  "dependencies": {
    "@bull-board/api": "^6.12.7",
    "@bull-board/express": "^6.12.7",
    "@prisma/client": "^5.22.0",
    "@types/otp-generator": "^4.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "chalk": "^5.6.0",
    "chalk-animation": "^2.0.3",
    "clamdjs": "^1.0.2",
    "clamscan": "^2.4.0",
    "cloudinary": "^2.9.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.2.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv-safe": "^9.1.0",
    "ejs": "^3.1.10",
    "env-var": "^7.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "figlet": "^1.8.2",
    "fs-extra": "^11.3.2",
    "gradient-string": "^3.0.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "minio": "^8.0.5",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "otp-generator": "^4.0.1",
    "prom-client": "^15.1.3",
    "rimraf": "^6.0.1",
    "swagger-jsdoc": "^3.7.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "vitest": "^3.2.4",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-loki": "^6.1.3",
    "winston-mongodb": "^7.0.1",
    "yamljs": "^0.3.0"
  },
  "_moduleAliases": {
    "@": "dist",
    "@config": "dist/config",
    "@services": "dist/services",
    "@middlewares": "dist/middlewares",
    "@router": "dist/router",
    "@utils": "dist/utils",
    "@controllers": "dist/controllers"
