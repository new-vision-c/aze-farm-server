        <h2><%= language === 'fr' ? 'Bonjour' : 'Hello' %> <%= name %>!</h2>
        
        <p class="welcome-message">
          <%= welcome_message %>
        </p>

        <p>
          <%= welcome_next_steps %>
        </p>

       

        <p>
          <%= welcome_thank_you %>
        </p>
