
PORT=3000
NODE_ENV=development

DB_TYPE=mongodb
APP_NAME=BACKEND_API
APP_DESCRIPTION="Full backend architecture"
APP_AUTHOR="Barthez Kenwou"
APP_VERSION=1.0.0
APP_LICENSE=MIT

DEFAULT_API_PREFIX=/api/v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
DISABLE_CONSOLE_LOGS=true

DATABASE_URL="mongodb://admin:secret123@mongo:27017/appDB?authSource=admin"

# MongoDB
MONGO_NAME=BACKEND_DB
MONGO_USER=admin
MONGO_PASSWORD=secret123
MONGO_DB=appDB
MONGO_PORT=27017

# Redis
REDIS_NAME=BACKEND_CACHE
REDIS_HOST=redis
REDIS_PORT=6379
REDISINSIGHT_NAME=REDISINSIGHT
REDISINSIGHT_PORT=8002

# MinIO
MINIO_NAME=BACKEND_STORAGE
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minio123
MINIO_PORT=9000
MINIO_CONSOLE=9001
MINIO_ENDPOINT=minio
MINIO_APP_BUCKET=gta
MINIO_BASE_PATH=uploads/
MINIO_USE_SSL=false

# MailHog SMTP
SMTP_NAME=BACKEND_MAIL
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_WEB_UI=8025
SMTP_USER=smtp_user
SMTP_PASS=smtp_password
USER_EMAIL=kenwoubarthez@gmail.com

# Nginx
NGINX_NAME=BACKEND_NGINX
NGINX_PORT=80
NGINX_SSH=443
NGINX_HOST=www.host.com

# ClamAV Configuration

CLAMAV_NAME=BACKEND_CLAMAV
CLAMAV_HOST=clamav
CLAMAV_PORT=3310
CLAMAV_TIMEOUT=20000

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

CLIENT_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# jwt
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1h
JWT_COOKIE_SECURITY=true
JWT_COOKIE_HTTP_STATUS=true
JWT_ALGORITHM=RS256
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_PRIVATE_KEY_PATH=src/config/keys/private.key
JWT_PUBLIC_KEY_PATH=src/config/keys/public.key
JWT_REFRESH_PRIVATE_KEY_PATH=src/config/keys/refreshPrivate.key
JWT_REFRESH_PUBLIC_KEY_PATH=src/config/keys/refreshPublic.key

# rate limiting
MAX_GLOBAL_QUERY_NUMBER=100
MAX_GLOBAL_QUERY_WINDOW=900000 # 15 minutes
MAX_UNIQ_QUERY_NUMBER=50
MAX_UNIQ_QUERY_WINDOW=900000 # 15 minutes

# Security
HSTS_MAX_AGE=31536000

# Logging
LOKI_ENABLED=false

# Csurf
ALLOW_CSRF_PROTECTION=false
CSRF_COOKIE_NAME=XSRF-TOKEN
CSRF_HEADER_NAME=X-XSRF-TOKEN
CSRF_EXPIRES_IN=2h

# Cookies
COOKIE_DOMAIN=localhost
COOKIE_SECURE=true
COOKIE_HTTP_STATUS=true
COOKIE_SAME_SITE=strict
COOKIE_EXPIRES_IN=2

# Swagger
SWAGGER_ENABLED=true
SWAGGER_USER=admin
SWAGGER_PASSWORD=admin

# CSP Reporting
CSP_REPORT_URI=/security/csp-violation

# OTP
OTP_DELAY=900000 # 15 minutes

# Local Cache
LOCAL_CACHE_TTL=120000
LOCAL_CACHE_MAX_ITEMS=100
COMPRESSION_THRESHOLD=1024


# ============================================
# OAuth2.0 Configuration
# ============================================

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/oauth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/api/v1/auth/oauth/github/callback

# Facebook OAuth
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:3000/api/v1/auth/oauth/facebook/callback

# Instagram OAuth (Basic Display API)
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_REDIRECT_URI=http://localhost:3000/api/v1/auth/oauth/instagram/callback

# Twitter OAuth 2.0
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_REDIRECT_URI=http://localhost:3000/api/v1/auth/oauth/twitter/callback

# LinkedIn OAuth (OpenID Connect)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/v1/auth/oauth/linkedin/callback

# Telegram Bot (for Login Widget)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_USERNAME=your_telegram_bot_username
